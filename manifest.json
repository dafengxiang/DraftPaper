{
  "name": "draft_paper",
  "description": "chrome插件，前端样式草稿",
  "version": "0.1.0",
  "manifest_version": 3,

  "action": {
    "default_popup": "popup.html",
    "default_title": "draft_paper",

    "default_icon": {
      "16": "./icons/cg_16.png",
      "48": "./icons/cg_48.png",
      "128": "./icons/cg_128.png"
    }
  },
  "icons": {
    "16": "./icons/cg_16.png",
    "48": "./icons/cg_48.png",
    "128": "./icons/cg_128.png"
  },

  "host_permissions": ["<all_urls>"],

  "background": {
    "service_worker": "background.js"
  },

  "permissions": [],

  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["<all_urls>"],
      "run_at": "document_end"
    }
  ]
}
